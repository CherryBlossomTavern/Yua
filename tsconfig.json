{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": false,
    "outDir": "dist",
    "baseUrl": ".",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "strictNullChecks": false,
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "skipLibCheck": true,
    // "paths": {
    //   "database": [ "src/database" ],
    //   "commandHandler": [ "src/commandHandler" ],
    //   "models": [ "src/database/models" ],
    //   "@types": [ "src/@types" ],
    //   "src": [ "src/" ]
    // }
  },
  "include": [
    "src/**/*",
    "modules/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}